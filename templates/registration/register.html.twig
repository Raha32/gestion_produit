{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
{% if app.user %}
			<div class="warning-login">
				Vous etes connect√© en tant que
				{{ app.user.userIdentifier }}
				<button class="warning-button"><a href="{{ path('app_logout') }}">Deconnexion</a></button>
			</div>
            {% else %}
	{{ form_start(registrationForm) }}
	<h1 class="titre-index">Inscription</h1>
	<div class="container-form">
		<div class="container-login">
			<h4>Obligatoire</h4>
			<div class="form-normal">
				<div class="form-type">
					{{ form_row(registrationForm.email)}}
					<i class="fa-solid fa-envelope fa-lg"></i>
				</div>
				<div class="form-type">
					{{ form_row(registrationForm.plainPassword) }}
					<i class="fa-solid fa-lock fa-lg"></i>
				</div>
			</div>
			<hr>
			<div class="form-normal">
			<div class="form-extra-text">
				<h4>Optionnel</h4>
				<h6>Si vous souhaitez faire une commande</h6>
			</div>
				<div class="form-type">
					{{ form_row(registrationForm.prenom) }}
					<i class="fa-solid fa-user fa-lg"></i>
				</div class="form-type">
				<div class="form-type">
					{{ form_row(registrationForm.nom) }}
					<i class="fa-solid fa-user fa-lg"></i>
				</div>
				<div class="form-type">
					{{ form_row(registrationForm.tel) }}
					<i class="fa-solid fa-phone fa-lg"></i>
				</div>
				<div class="form-type location-dot">
					{{ form_row(registrationForm.cp) }}
					<i class="fa-solid fa-location-dot fa-lg"></i>
				</div>
				<div class="form-type location-dot">
					{{ form_row(registrationForm.adresse) }}
					<i class="fa-solid fa-location-dot fa-lg"></i>
				</div>
				<div class="form-type city">
					{{ form_row(registrationForm.ville) }}
					<i class="fa-solid fa-city fa-lg"></i>
				</div>
				<div class="form-type">
					{{ form_row(registrationForm.pays) }}
					<i class="fa-sharp fa-solid fa-flag fa-lg"></i>
				</div>
			</div>

			<button type="submit" class="button-register">S'inscrire</button>
		</div>
	</div>
	{{ form_end(registrationForm) }}
	{% endif %}
{% endblock %}
