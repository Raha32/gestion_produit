{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1 class="titre-index">Index des produits</h1>
    <div class="flex-box">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Marque</th>
                <th>Reference</th>
                <th>Description</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.marque }}</td>
                <td>{{ product.ref }}</td>
                <td>{{ product.description }}</td>
                <td><img src="{{ asset('images/' ~ product.image ) }}" alt=""></td>
                <td>{{ product.prix }}</td>
                <td>{{ product.quantity }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"><i class="fa-solid fa-eye fa-2xl"></i></a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><i class="fa-solid fa-file-pen fa-2xl"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_product_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
